
<%= form_for @item, :html =>{ :multipart => true} do |f| %>
  <%= f.label :name %>
  <%= f.text_area :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :category %>
  <%= f.select :category_id ,Category.all.collect{|c| [ c.name, c.id ] } %>
  <%= f.file_field :item_pic %>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
</div>
