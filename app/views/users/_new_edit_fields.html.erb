<%= form_for(@user) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>
 
  <%= f.text_field :name, placeholder: "Enter your full name here" %>

  <%= f.text_field :username, placeholder: "Your username will be visible to other users" %>

  <%= f.text_field :email, placeholder: "Enter a valid email: alain@example.com" %>

  <%= f.password_field :password %>

  <%= f.password_field :password_confirmation, placeholder:"Confirm your password" %>

  <%= f.submit "Submit", class: "btn btn-large btn-warning" %>

  <% end %>